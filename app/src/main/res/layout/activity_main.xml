<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="0dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainToolLayout">
    </WebView>

    <RelativeLayout
        android:id="@+id/mainToolLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_home"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/friendsButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/homeButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_friends"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/messageButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/friendsButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_message"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/videoButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/messageButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_video"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/noteButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/videoButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_note"
            android:scaleType="centerCrop"
            />
        <ImageButton
            android:id="@+id/groupsButton"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/noteButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_group"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainsetLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            />
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/progressBar"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_action_settings"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/ic_action_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:elevation="12dp"
        android:id="@+id/exitButton"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"/>



</FrameLayout>